    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>General Store</h1>
    <p class="lead">This sotre was founded in 1977 and is still running strong.</p>
    @Html.ActionLink("Learn More About Us", "About")
</div>

